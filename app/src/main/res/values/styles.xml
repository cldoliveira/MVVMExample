<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="search_et">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/small_margin</item>
        <item name="android:textColorHint">@color/white_40</item>
    </style>

    <style name="titles">
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="information">
        <item name="android:textSize">@dimen/text_information_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
